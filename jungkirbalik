<body>
  <div class="container">
    <h1>üîÑ Aplikasi Jungkir Balik</h1>
    <div class="content">
      <textarea id="inputText" placeholder="Tulis teks kamu di sini..."></textarea>
      <button onclick="jungkirBalik()">Jungkir Balik</button>
      <textarea id="outputText" placeholder="Hasil akan muncul di sini..." readonly></textarea>
    </div>
  </div>

  <script>
    const upsideDownMap = {
      a: '\u0250',
      b: 'q',
      c: '\u0254',
      d: 'p',
      e: '\u01DD',
      f: '\u025F',
      g: '\u0183',
      h: '\u0265',
      i: '\u0131',
      j: '\u027E',
      k: '\u029E',
      l: 'l',
      m: '\u026F',
      n: 'u',
      o: 'o',
      p: 'd',
      q: 'b',
      r: '\u0279',
      s: 's',
      t: '\u0287',
      u: 'n',
      v: '\u028C',
      w: '\u028D',
      x: 'x',
      y: '\u028E',
      z: 'z',
      A: '\u2200',
      B: '·ô†',
      C: '\u0186',
      D: '‚óñ',
      E: '\u018E',
      F: '\u2132',
      G: '\u05E4',
      H: 'H',
      I: 'I',
      J: '\u017F',
      K: '‚ãä',
      L: '\u02E5',
      M: 'W',
      N: 'N',
      O: 'O',
      P: '‘Ä',
      Q: '√í',
      R: '\u1D1A',
      S: 'S',
      T: '\u22A5',
      U: '\u2229',
      V: '\u039B',
      W: 'M',
      X: 'X',
      Y: '\u2144',
      Z: 'Z',
      0: '0',
      1: '∆ñ',
      2: '·ÑÖ',
      3: '∆ê',
      4: '„Ñ£',
      5: 'œõ',
      6: '9',
      7: '„Ñ•',
      8: '8',
      9: '6',
      ',': "'",
      '.': 'Àô',
      '?': '¬ø',
      '!': '¬°',
      '"': ',,',
      "'": ',',
      '`': ',',
      '(': ')',
      ')': '(',
      '[': ']',
      ']': '[',
      '{': '}',
      '}': '{',
      '<': '>',
      '>': '<',
      '&': '‚Öã',
      '_': '‚Äæ',
      '\n': '\n',
      ' ': ' ',
    };

    function jungkirBalik() {
      const input = document.getElementById("inputText").value;
      let result = "";
      for (let i = input.length - 1; i >= 0; i--) {
        const char = input[i];
        result += upsideDownMap[char] || upsideDownMap[char.toLowerCase()] || char;
      }
      document.getElementById("outputText").value = result;
    }
  </script>
